#results-word
  %table.word_results{:summary=>"Wordnet search results for word #{@word.lemma}"}
    %caption.word_results= "Word: #{@word.lemma}"  
    %tbody.word_results
      %tr
        %th wordid:
        %td= @word.wordid
        %tr
        %th lemma:
        %td= @word.lemma
        
#results-synsets
  %table.synset_results{:summary=>"Wordnet search results - senses for word #{@word.lemma}"}
    %caption.synset_results="Synsets for #{@word.lemma}"
    %tbody.synset_results
      %tr
        %th category
        %th definition
        %th samples
      - @word.senses.each do |sense|
        %tr{:class=> sense.synsetid}
          %td= sense.synset.categorydef.name
          %td= sense.synset.definition
          %td= show_samples(sense.synset)
        
%script
  $(document).ready(function(){
  $("caption.word_results").click(function(event) {
  $("tbody.word_results").toggle() });
  });
  
%script
  $(document).ready(function(){
  $("caption.synset_results").click(function(event) {
  $("tbody.synset_results").toggle() });
  });
